      html {
        background-color: #f9f9f9;
        color: #5e5e5e;
        font: .9em/1.5 sans-serif;
      }
      main {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 3px;
        box-shadow: 0 2px 0 hsla(0,0%,69%,.12);
        margin: 2em auto;
        width: 28em;
        padding-bottom: 1em;
      }
      h1 {
        margin: 1rem 0;
        padding: 1rem;
        text-align: center;
        border-bottom: 1px solid #ddd;
      }
      h2 {
        font-size: 1.1em;
        text-align: center;
      }
      fieldset {
        border: none;
        padding: 1em 2em;
      }
      legend {
        display: block;
        text-align: center;
        margin: 1em 0 0;
        padding: 0;
        width: 100%;
        font-weight: bold;
      }
      label {
        margin-top: 1em;
        display: block;
        font-weight: bold;
      }
      input:not([type="checkbox"]):not([type="radio"]),
      select,
      textarea {
        width: 100%;
        padding: .5em;
      }
      input[type="submit"] {
        margin-top: 2em;
        padding: .5em;
        background-color: #007dc1;
        border: 1px solid #004b75;
        border-radius: 3px;
        width: 100%;
        text-transform: none;
        color: #fff;
        cursor: pointer;
      }
      .error {
        padding: 1rem;
        font-size: 70%;
        margin: 3px;
        margin-bottom: 1rem;
        color: red;
        border: 1px solid red;
      }
      pre {
        margin: 2em;
        border-left: 3px solid #007dc1;
        padding-left: 2px;
        background: #f9f9f9;
        overflow: auto;
      }

